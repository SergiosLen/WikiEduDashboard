.profile_container
	margin-top 50px
	border 1px solid $border_lt

#profile
	margin 0 auto
	position relative
	overflow hidden
	width 100%
	border 1px solid #808080
	background-color 	#575d99
	display block
	color #f8f8ff
	font-size 20px
	padding-bottom 10px

	#disclaimer
		display none

		.module
			background-color #fcf8e3
			margin 0 auto

			.module__data
				font-size 12px
				color black

  .header
		width: 100%;
		height: 40px;

		#user_name
			float left
			padding-left 2%
			padding-top 8px

			p
				font-weight 700
				margin 0 auto
				text-decoration underline

		#edit_profile
			.controls
				padding unset
				padding-top 2px
				position relative
	#details
		width 100%
		#user_bio
			float left
			width 38%
			margin -5px 0 0 2%

			.rails_editable-input
				height 40px !important
				width 90% !important
				background-color: #e7e7e7;
				color #000
				display none

			p
				font-size 12px
				font-weight 700
				display inline-block
				width 70%
				text-decoration none

		#user_id
			float right
			width 60%
			border-left 2px solid white
			padding-left 3%
			border-left 2px solid #fff

			#icon
				font-weight 900
				display inline

			p
				font-size 18px
				display inline



#profile_details
	padding-left 5%
	padding-right 5%

	#user_form
	background-color orange
	color red

	#statistics
		padding-top 20px

		#inner_statistics
			padding-top 10px

	#course-details
		padding-top 30px



// making user profile pages responsive
@media only screen and (max-width: 500px)
	#profile

		#profile_right
			display none

		#profile_left
			#user_name
				padding 0
				width 100%
				float none
				p
					font-weight 0
					font-size 12px

			#user_bio
				p
					font-size 8px

			#user_id
				float none
				width 100%
				border-left 1px
				padding-left 0

				#icon
					font-size 12px
					font-weight 0

				p
					font-size 10px
